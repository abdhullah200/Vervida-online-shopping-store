<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vervida</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <!-- Three.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/vervida.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-gem me-2"></i>
                    <span class="neon">Vervida</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                <i class="bi bi-grid me-1"></i>Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">
                                <i class="bi bi-envelope me-1"></i>Contact
                            </a>
                        </li>
                    </ul>
                    
                    <div class="d-flex align-items-center">
                        <!-- Cart Button -->
                        <button class="btn btn-outline-light position-relative me-3" data-bs-toggle="offcanvas" data-bs-target="#cartSidebar">
                            <i class="bi bi-cart3"></i>
                            <span id="cartBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">
                                0
                            </span>
                        </button>
                        
                        <!-- Theme Toggle -->
                        <button id="themeToggle" class="btn btn-outline-light" title="Change Theme">
                            <i class="bi bi-palette"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" style="padding-top: 76px;">
        @RenderBody()
    </main>

    <footer class="py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="neon mb-3">Vervida</h5>
                    <p class="text-muted">Premium online shopping experience with cutting-edge technology and exceptional service.</p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-muted hover-primary"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-muted hover-primary"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-muted hover-primary"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-muted hover-primary"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-md-2 mb-4">
                    <h6 class="mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted">About Us</a></li>
                        <li><a href="#" class="text-muted">Contact</a></li>
                        <li><a href="#" class="text-muted">Support</a></li>
                        <li><a href="#" class="text-muted">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-4">
                    <h6 class="mb-3">Categories</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted">Electronics</a></li>
                        <li><a href="#" class="text-muted">Clothing</a></li>
                        <li><a href="#" class="text-muted">Jewelry</a></li>
                        <li><a href="#" class="text-muted">Accessories</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 class="mb-3">Newsletter</h6>
                    <p class="text-muted">Stay updated with our latest products and offers.</p>
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Your email">
                        <button class="btn btn-primary" type="button">Subscribe</button>
                    </div>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-muted mb-0">&copy; 2024 Vervida. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-muted me-3">Privacy Policy</a>
                    <a href="#" class="text-muted me-3">Terms of Service</a>
                    <a href="#" class="text-muted">Cookies</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Cart Sidebar -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartSidebar">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title neon">
                <i class="bi bi-cart3 me-2"></i>Your Cart
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body" id="cartBody">
            <div class="text-center py-5">
                <i class="bi bi-cart display-1 text-muted mb-3"></i>
                <h5 style="color: #ffffff !important;">Your cart is empty</h5>
                <p style="color: #ffffff !important;">Add some products to get started!</p>
            </div>
        </div>
        <div class="offcanvas-footer p-3 border-top border-secondary">
            <button class="btn btn-primary w-100" disabled>
                <i class="bi bi-credit-card me-2"></i>Checkout
            </button>
            <small class="d-block text-center mt-2" style="color: #ffffff !important;">
                Secure checkout powered by Stripe
            </small>
        </div>
    </div>

    <!-- Emergency Modal Close Button (always visible when modal is open) -->
    <div id="emergencyCloseBtn" class="position-fixed top-0 end-0 m-3" style="z-index: 2000; display: none;">
        <button class="btn btn-danger rounded-circle" onclick="window.forceCloseAllModals()" title="Force Close Modal">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <!-- Back to Top Button -->
    <button id="backToTop" class="btn btn-primary position-fixed bottom-0 end-0 m-4 rounded-circle" style="display: none; width: 50px; height: 50px; z-index: 1000;">
        <i class="bi bi-arrow-up"></i>
    </button>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Enhanced modal and UI functionality
        document.addEventListener('DOMContentLoaded', function() {
            const backToTop = document.getElementById('backToTop');
            
            if (backToTop) {
                backToTop.addEventListener('click', function() {
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
                
                window.addEventListener('scroll', function() {
                    if (window.pageYOffset > 300) {
                        backToTop.style.display = 'block';
                        backToTop.style.opacity = '1';
                    } else {
                        backToTop.style.opacity = '0';
                        setTimeout(() => {
                            if (window.pageYOffset <= 300) {
                                backToTop.style.display = 'none';
                            }
                        }, 300);
                    }
                });
            }

            // Global modal force close function
            window.forceCloseAllModals = function() {
                // Hide emergency button
                const emergencyBtn = document.getElementById('emergencyCloseBtn');
                if (emergencyBtn) {
                    emergencyBtn.style.display = 'none';
                }

                // Close demo modal specifically
                if (window.closeDemoModal) {
                    window.closeDemoModal();
                }

                // Remove all modals
                const allModals = document.querySelectorAll('.modal');
                allModals.forEach(modal => {
                    const bsModal = bootstrap.Modal.getInstance(modal);
                    if (bsModal) {
                        bsModal.hide();
                    }
                    modal.remove();
                });

                // Reset body
                document.body.classList.remove('modal-open');
                document.body.style.overflow = '';
                document.body.style.paddingRight = '';

                // Remove backdrops
                const backdrops = document.querySelectorAll('.modal-backdrop');
                backdrops.forEach(backdrop => backdrop.remove());
            };

            // Show emergency button when modal opens
            const observer = new MutationObserver(function(mutations) {
                mutations.forEach(function(mutation) {
                    if (mutation.type === 'childList') {
                        const modals = document.querySelectorAll('.modal.show');
                        const emergencyBtn = document.getElementById('emergencyCloseBtn');
                        if (modals.length > 0 && emergencyBtn) {
                            emergencyBtn.style.display = 'block';
                        } else if (emergencyBtn) {
                            emergencyBtn.style.display = 'none';
                        }
                    }
                });
            });

            observer.observe(document.body, {
                childList: true,
                subtree: true
            });

            // Handle any existing modals
            setTimeout(() => {
                const existingModals = document.querySelectorAll('.modal.show');
                const emergencyBtn = document.getElementById('emergencyCloseBtn');
                if (existingModals.length > 0 && emergencyBtn) {
                    emergencyBtn.style.display = 'block';
                }
            }, 100);

            // Handle escape key globally
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    window.forceCloseAllModals();
                }
            });

            // Global modal cleanup on any modal event
            document.addEventListener('hidden.bs.modal', function(e) {
                setTimeout(() => {
                    const remainingModals = document.querySelectorAll('.modal.show');
                    if (remainingModals.length === 0) {
                        window.forceCloseAllModals();
                    }
                }, 100);
            });

            // Add click handler to any remaining backdrop
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('modal-backdrop')) {
                    window.forceCloseAllModals();
                }
            });

            // Initialize cart update
            if (typeof updateCartDisplay === 'function') {
                updateCartDisplay();
            }
        });
    </script>

    <!-- Additional Styles for better modal and cart handling -->
    <style>
        /* Ensure modals are properly styled */
        .modal {
            --bs-modal-zindex: 1055;
        }
        
        .modal-backdrop {
            --bs-backdrop-zindex: 1050;
            background-color: rgba(0, 0, 0, 0.7);
        }
        
        /* Cart z-index fixes - ensure cart is above navbar */
        .offcanvas {
            z-index: 1080 !important;
        }
        
        .offcanvas.show {
            z-index: 1080 !important;
        }
        
        .offcanvas-backdrop {
            z-index: 1075 !important;
            background-color: rgba(0, 0, 0, 0.7);
        }
        
        /* Ensure navbar is below cart */
        .navbar {
            z-index: 1030 !important;
        }
        
        /* Cart button should be clickable */
        .navbar .btn {
            z-index: 1031 !important;
            position: relative;
        }
        
        /* Fix close button styling */
        .btn-close,
        .btn-close-white {
            background: transparent url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23ffffff'%3e%3cpath d='m.235 1.337 1.076-1.076a.25.25 0 0 1 .354 0L8 6.464 14.336.262a.25.25 0 0 1 .353 0l1.077 1.076a.25.25 0 0 1 0 .354L9.462 8l6.306 6.306a.25.25 0 0 1 0 .354l-1.077 1.076a.25.25 0 0 1-.353 0L8 9.536 1.664 15.838a.25.25 0 0 1-.354 0L.235 14.762a.25.25 0 0 1 0-.354L6.538 8 .235 1.694a.25.25 0 0 1 0-.354z'/%3e%3c/svg%3e") center/1em auto no-repeat;
            border: none;
            border-radius: 0.375rem;
            opacity: 0.8;
            padding: 0.375rem 0.375rem;
            margin: -0.375rem -0.375rem -0.375rem auto;
            font-size: 1.5rem;
            line-height: 1;
            color: #ffffff;
            text-decoration: none;
            cursor: pointer;
            transition: opacity 0.15s ease-in-out;
        }
        
        .btn-close:hover,
        .btn-close-white:hover {
            opacity: 1;
            transform: scale(1.1);
        }
        
        .btn-close:focus,
        .btn-close-white:focus {
            outline: 0;
            box-shadow: 0 0 0 0.25rem rgba(0, 245, 255, 0.25);
            opacity: 1;
        }
        }
    </style>
</body>
</html>