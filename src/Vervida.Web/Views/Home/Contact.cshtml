@{
    ViewData["Title"] = "Contact";
}

<div class="container py-5">
    <h1>Contact</h1>
    <p class="lead">Have questions or feedback? Get in touch.We'd love to hear from you.</p>

    <div class="row">
        <div class="col-md-6">
            <h5>Office</h5>
            <p>Vervida HQ<br/>123 Demo Street<br/>Example City, EC 12345</p>

            <h5>Support</h5>
            <p>Email: <a href="mailto:support@vervida.example">support@vervida.example</a><br/>Phone: +1 (555) 123-4567</p>
        </div>
        <div class="col-md-6">
            <h5>Send us a message</h5>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Your name</label>
                    <input id="name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea id="message" class="form-control" rows="5"></textarea>
                </div>
                <button type="button" class="btn btn-primary" onclick="alert('Thanks â€” this is a demo form.')">Send</button>
            </form>
        </div>
    </div>
</div>